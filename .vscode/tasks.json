{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build CLI Tool",
			"type": "shell",
			"command": "npm run build",
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		},
		{
			"label": "Watch CLI Tool",
			"type": "shell",
			"command": "npm run dev",
			"isBackground": true,
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": "build"
		},
		{
			"label": "Run Tests",
			"type": "shell",
			"command": "npm test",
			"problemMatcher": [],
			"group": "test"
		}
	]
}